<!DOCTYPE html>

<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>
        Entry <%= entry.id %>
    </title>

    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">

</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <h3>
                    Entry <%= entry.id %>
                </h3>
            </div>
        </div>
        <div class="row">

            <div class="col-md-2" id="leftCol">
                <h4>Messages</h4>
                <!-- Left column content -->
            </div>

            <div class="col-md-8">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4 class="panel-title">Details</h4>
                    </div>
                    <div class="panel-body">
                        <ul>
                            <li>First Name: <%= entry.firstName %></li>
                            <li>Last Name: <%= entry.lastName %></li>
                            <li>Email: <%= entry.email %></li>
                            <li>Phone: <%= entry.phone %></li>
                            <li>Newsletter: <%= entry.newsletter %></li>
                            <li>Message: <%= entry.message %></li>
                            <li>
                                Interests:
                                <% interests.forEach(function(interest, index) { %>
                                    <%= interest.name %><%= index !== interests.length - 1 ? ',' : '' %>
                                <% }); %>
                            </li>
                            
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-md-2" id="rightCol">
                <!-- Right column content -->
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
            </div>
        </div>
    </div>
    <!-- <script src="/js/script.js"></script> -->
</body>

</html>
